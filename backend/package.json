{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsc",
    "start": "bun dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "bunx prisma migrate dev",
    "db:generate": "bunx prisma generate",
    "db:studio": "bunx prisma studio"
  },
  "dependencies": {
    "@apollo/server": "5.4.0",
    "@as-integrations/fastify": "^3.1.0",
    "@fastify/cors": "^10.0.0",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "7.4.1",
    "@prisma/client-runtime-utils": "^7.4.1",
    "@sentry/node": "10.39.0",
    "fast-jwt": "^4.0.0",
    "fastify": "5.7.4",
    "graphql": "16.12.0",
    "graphql-tag": "^2.12.6",
    "jwks-rsa": "^3.1.0",
    "node-cache": "^5.1.2",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.1",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "3.8.1",
    "prisma": "7.4.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vitest": "4.0.18"
  }
}
